{
  "exclude": ["dist", "node_modules"],
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2015"],
    "importHelpers": false,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "preserveWatchOutput": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true
  }
}
